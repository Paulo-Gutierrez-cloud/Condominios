# ===========================================
# APLICACIÓN
# ===========================================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=GestionaTuCondominio

# ===========================================
# BASE DE DATOS (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://condominios:condominios123@localhost:5432/condominios?schema=public"
DB_USER=condominios
DB_PASSWORD=condominios123
DB_NAME=condominios
DB_PORT=5432

# ===========================================
# REDIS (Cache y Rate Limiting)
# ===========================================
REDIS_URL="redis://:redis123@localhost:6379"
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# ===========================================
# MINIO (Storage Local - S3 Compatible)
# ===========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=condominios-uploads

# ===========================================
# AUTENTICACIÓN (NextAuth.js)
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=tu-secret-muy-seguro-cambiar-en-produccion-min-32-chars

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
EMAIL_FROM=noreply@tucondominio.com

# ===========================================
# PAGOS - STRIPE (Opcional)
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ===========================================
# PAGOS - MERCADOPAGO (Opcional)
# ===========================================
MERCADOPAGO_ACCESS_TOKEN=TEST-xxx
MERCADOPAGO_WEBHOOK_SECRET=xxx

# ===========================================
# SEGURIDAD
# ===========================================
ENCRYPTION_KEY=tu-clave-encriptacion-32-caracteres
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# LOGS
# ===========================================
LOG_LEVEL=debug

# ===========================================
# ADMINER (DB Manager)
# ===========================================
ADMINER_PORT=8080
